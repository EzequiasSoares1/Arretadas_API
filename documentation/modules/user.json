            ],
            "responses": {
                "401": {
                    "description": "Precisa de um token para autenticação"
                },
                "500": {
                    "description": "Falha ao consultar users"
                },
                "200": {
                    "description": "ok"
                }
            }
        },
        "post": {
            "tags": [
                "User"
            ],
            "requestBody": {
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "example": {
                                "nickname": "Exemplo",
                                "password": "123456",
                                "indexQuestion": 3,
                                "answerQuestion": "resposta exemplo",
                                "city": "Monteiro"
                            }
                        }
                    }
                }
            },
            "responses": {
                "401": {
                    "description": "Precisa de um token para autenticação"
                },
                "400": {
