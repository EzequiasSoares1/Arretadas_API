    "/user/{id}": {
        "put": {
            "security": [
                {
                    "bearerAuth": []
                }
            ],
            "tags": [
                "User"
            ],
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "description": "Id do user cadastrado",
                    "required": true
                }
            ],
            "requestBody": {
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "example": {
                                "nickname": "Victor Monteiro",
                                "password": "654321",
                                "protection_code": "586407"
                            }
                        }
                    }
                }
            },
            "responses": {
                "500": {
                    "description": "Falha ao fazer o update"
                },
                "200": {
                    "description": "Ok"
                }
