                "500": {
                    "description": "Falha ao consultar users"
                },
                "201": {
                    "description": "Criado"
                }
            }
        },
        "delete": {
            "security": [
                {
                    "bearerAuth": []
                }
            ],
            "tags": [
                "User"
            ],
            "requestBody": {
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
