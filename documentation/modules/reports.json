    "/reports/complaints/period": {
        "get": {
            "tags": [
                "Reports"
            ], 
            "security": [
                {
                    "bearerAuth": []
                }
            ],
            "summary": "Obter denúncias por período",
           
            "parameters": [
                {
                    "name": "startDate",
                    "in": "query",
                    "description": "Data de início do período",
                    "required": true,
                    "schema": {
                        "type": "string",
                        "format": "YYYY-MM-DD"
                    }
                },
                {
                    "name": "endDate",
                    "in": "query",
                    "required": true,
                    "description": "Data de término do período",
                    "schema": {
                        "type": "string",
                        "format": "YYYY-MM-DD"
                    }
                },
                {
                    "name": "city",
                    "in": "query",
                    "description": "Cidade para a qual o relatório está sendo gerado",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                }
            ],
            "responses": {
                "200": {
                    "description": "Operação bem-sucedida",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "totalComplaints": {
                                        "type": "integer",
                                        "description": "Número total de denúncias"
                                    },
                                    "complaintsByType": {
                                        "type": "object",
                                        "description": "Número de denúncias por tipo",
                                        "additionalProperties": {
                                            "type": "integer"
                                        }
                                    },
                                    "uniqueLocations": {
                                        "type": "object",
                                        "description": "Localizações únicas com denúncias",
                                        "additionalProperties": {
                                            "type": "object",
                                            "description": "Intervalos de horas com denúncias",
                                            "additionalProperties": {
                                                "type": "integer"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "500": {
                    "description": "Erro interno do servidor",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "message": {
                                        "type": "string",
                                        "description": "Mensagem de erro"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
